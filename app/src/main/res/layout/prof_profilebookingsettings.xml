<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/editvenue"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:padding="20dp"
                    android:background="@null"
                    android:src="@drawable/edit"></ImageButton>

                <TextView
                    android:id="@+id/defaultvenue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/editvenue"
                    android:textStyle="bold"
                    android:paddingTop="17dp"
                    android:paddingBottom="10dp"
                    android:text="Default Consultation Venue" />

                <TextView
                    android:id="@+id/venue_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/editvenue"
                    android:layout_below="@id/defaultvenue"
                    android:text="lorem ipsum"
                    android:paddingBottom="10dp"/>
            </RelativeLayout>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/edittimeslot"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:padding="20dp"
                    android:background="@null"
                    android:src="@drawable/edit"></ImageButton>

                <TextView
                    android:id="@+id/defaulttimeslot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/edittimeslot"
                    android:textStyle="bold"
                    android:paddingTop="17dp"
                    android:paddingBottom="10dp"
                    android:text="Default Consultation Time Slot" />

                <TextView
                    android:id="@+id/timeslot_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/edittimeslot"
                    android:layout_below="@id/defaulttimeslot"
                    android:text="lorem ipsum"
                    android:paddingBottom="10dp"/>
            </RelativeLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/editavailability"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:padding="20dp"
                    android:background="@null"
                    android:src="@drawable/edit"></ImageButton>

                <TextView
                    android:id="@+id/defaultavailability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/editavailability"
                    android:textStyle="bold"
                    android:paddingTop="17dp"
                    android:paddingBottom="10dp"
                    android:text="Default Availability (Office Hours)" />

                <TextView
                    android:id="@+id/availability_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/editavailability"
                    android:layout_below="@id/defaultavailability"
                    android:text="lorem ipsum"
                    android:paddingBottom="10dp"/>
            </RelativeLayout>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/editbiblio"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:padding="20dp"
                    android:background="@null"
                    android:src="@drawable/edit"></ImageButton>

                <TextView
                    android:id="@+id/biblio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/editbiblio"
                    android:textStyle="bold"
                    android:paddingTop="17dp"
                    android:paddingBottom="10dp"
                    android:text="About Myself" />

                <TextView
                    android:id="@+id/biblio_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/editbiblio"
                    android:layout_below="@id/biblio"
                    android:text="lorem ipsum"
                    android:paddingBottom="10dp"/>
            </RelativeLayout>

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>